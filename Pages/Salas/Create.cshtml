@page
@model APPCINE.Pages.Salas.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Sala</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Sala.TipoSala" class="control-label"></label>
                <input asp-for="Sala.TipoSala" class="form-control" />
                <span asp-validation-for="Sala.TipoSala" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sala.Precio" class="control-label"></label>
                <input asp-for="Sala.Precio" class="form-control" />
                <span asp-validation-for="Sala.Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sala.IdPelicula" class="control-label"></label>
                <input asp-for="Sala.IdPelicula" class="form-control" />
                <span asp-validation-for="Sala.IdPelicula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
